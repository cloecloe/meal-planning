              <i class="far fa-trash-alt hover-garbage"></i>
            <% end %>
          </div>
        <%end%>
      <%end%>
    </div>

    <div class="d-format">
      <% dinner_meals = meals.select{ |meal| meal.tagname == "Dinner"} %>
